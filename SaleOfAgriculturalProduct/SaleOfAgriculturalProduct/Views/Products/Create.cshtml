@model SaleOfAgriculturalProduct.Data.Product


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Category" class="control-label"></label>
                @Html.DropDownListFor(x => x.Category, new[] {
                    new SelectListItem() {Text = "Apple",
                                         Value ="Apple"},
                    new SelectListItem() {Text = "Apricote",
                                         Value =  "Apricote"},
                    new SelectListItem() {Text = "Bananas",
                                         Value =  "Bananas"},
                    new SelectListItem() {Text = "Watermelon",
                                         Value =  "Watermelon"},
                    new SelectListItem() {Text = "Carrot",
                                            Value =  "Carrot"},
                    new SelectListItem() {Text = "Potato",
                                            Value =  "Potato"},
                    new SelectListItem() {Text = "Greens",
                                            Value =  "Greens"},
                    new SelectListItem() {Text = "Bent",
                                            Value =  "Bent"},
    }, "Choose an Category", new { @class = "form-control" })

            </div>



            <div class="form-group">
                <label asp-for="MeasurementUnit" class="control-label"></label>


                @Html.DropDownListFor(x => x.MeasurementUnit, new[] {
                   new SelectListItem() {Text = "kg",
                                        Value ="kg"},
                   new SelectListItem() {Text = "Tonna",
                                        Value =  "Tonna"},
                   new SelectListItem() {Text = "liter",
                                        Value =  "liter"},

}, "Choose a MeasurementUnit", new { @class = "form-control" })
                <span asp-validation-for="MeasurementUnit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PriceUnit" class="control-label"></label>
                <input asp-for="PriceUnit" class="form-control" />
                <span asp-validation-for="PriceUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quality" class="control-label"></label>


                @Html.DropDownListFor(x => x.Quality, new[] {
                 new SelectListItem() {Text = "Average",
                                      Value ="Average"},
                 new SelectListItem() {Text = "Low",
                                      Value =  "Low"},
                 new SelectListItem() {Text = "High",
                                      Value =  "High"},

    }, "Choose a MeasurementUnit", new { @class = "form-control" })

                <span asp-validation-for="Quality" class="text-danger"></span>
                @*</div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="ShowAllow" /> @Html.DisplayNameFor(model => model.ShowAllow)
                            </label>
                        </div>
                    </div>*@
                <div class="form-group">
                    <label asp-for="ProductionTime" class="control-label"></label>
                    <input asp-for="ProductionTime" class="form-control" />
                    <span asp-validation-for="ProductionTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductItmsImageId" class="control-label"></label>
                    <select asp-for="ProductItmsImageId" class="form-control" asp-items="ViewBag.ProductItmsImageId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
